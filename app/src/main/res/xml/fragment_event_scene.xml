<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image_view_event_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_page_image_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/text_view_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/image_view_event_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_16dp">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image_view_event_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_page_end_image_height"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/text_character_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/space_16dp"
            android:gravity="bottom|left"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_event_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/image_view_event_thumbnail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_view_event_thumbnail"
            app:layout_constraintVertical_bias="1.0" />

        <Constraint
            android:id="@+id/text_view_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_event_thumbnail" />

        <Constraint
            android:id="@+id/recycler_view_event_comics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/space_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description"
            android:layout_marginTop="@dimen/space_8dp" />

        <Constraint
            android:id="@+id/text_view_title"
            app:layout_constraintBottom_toBottomOf="@id/image_view_event_thumbnail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/recycler_view_event_comics" />
    </Transition>
</MotionScene>
