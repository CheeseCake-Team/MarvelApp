<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_series_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_series"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent
"            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/creator_img" />
<ImageView
    android:id="@+id/image_more_sitting"
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_series_name"
    android:layout_marginEnd="8dp"
   android:src="@drawable/baseline_more_vert_24" />
        <TextView
            android:id="@+id/text_series_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
           android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="SPIDER MAN(2018)"
app:layout_constraintStart_toEndOf="@id/image_series"
            app:layout_constraintEnd_toStartOf="@id/image_more_sitting"
            app:layout_constraintTop_toTopOf="parent"
           />

        <TextView
            android:id="@+id/text_issue_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="issue #11"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="#99000000"
            app:layout_constraintEnd_toEndOf="@id/text_series_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/text_series_name"
            app:layout_constraintTop_toBottomOf="@+id/text_series_name" />
        <TextView
            android:id="@+id/text_series_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="4dp"
            android:text="feb,23,2021"
            android:textColor="#99000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_series"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text_issue_number"
            app:layout_constraintTop_toBottomOf="@+id/text_issue_number"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>