<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.abaferastech.marvelapp.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:padding="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/fragment_comics_view_all_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_text_input_layout" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter"
            android:elevation="6.001dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:background="@color/search_bar_background_color"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_search"
            app:layout_constraintEnd_toEndOf="@+id/search_text_input_layout"
            app:layout_constraintTop_toTopOf="@+id/search_text_input_layout"
            android:contentDescription="@string/filter_button" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search_text_input_layout"
            style="@style/CustomSearchBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/space_16dp"
            android:elevation="6dp"
            android:focusableInTouchMode="true"
            android:hint="thor"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/space_16dp"
            android:text="@={viewModel.searchQuery}"
            android:textColor="@color/md_theme_onSurface"
            android:textColorHint="@color/md_theme_onSurfaceVariant"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>