<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.abaferastech.marvelapp.ui.creatorsDetails.CreatorDetailsViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/creator_details_scene"
        tools:context=".ui.base.CreatorSeriesFragment">

        <View
            android:id="@+id/view_creator_image_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image_creator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_8dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.creator.thumbnail}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            tools:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/text_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            android:gravity="center"
            android:text="@{viewModel.creator.fullName}"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/scrollView"
            app:layout_constraintEnd_toEndOf="@id/image_creator"
            app:layout_constraintStart_toStartOf="@id/image_creator"
            app:layout_constraintTop_toBottomOf="@id/image_creator"
            tools:text="Creator Name"
            android:maxLines="1"
            android:fontFamily="@font/bangers"

            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            app:layout_constraintTop_toBottomOf="@id/text_creator_name">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_16dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:items="@{viewModel.series}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_creator_series" />

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>