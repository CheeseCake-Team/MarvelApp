<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="comics_horizontal"
            type="com.abaferastech.marvelapp.data.model.Comics" />
    </data>


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_comic_image"
                android:layout_width="120dp"
                android:layout_height="180dp"
                app:imageUrl="@{comics_horizontal.myThumbnail()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/material_dynamic_tertiary70" />

            <TextView
                android:id="@+id/text_view_comic_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/bangers"
                android:maxLines="1"
                android:text="@{comics_horizontal.title.toString()}"
                app:layout_constraintBottom_toTopOf="@+id/text_view_comic_issue_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_comic_image"
                tools:text="The amazing spider-man" />

            <TextView
                android:id="@+id/text_view_comic_issue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{comics_horizontal.issueNumber.toString()}"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_comic_image"
                app:layout_constraintStart_toStartOf="@+id/text_view_comic_name"
                app:layout_constraintTop_toTopOf="@+id/image_view_comic_image"
                tools:text="Issue #13" />

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{comics_horizontal.issueNumber.toString()}"
                app:layout_constraintStart_toStartOf="@+id/text_view_comic_issue_number"
                app:layout_constraintTop_toBottomOf="@+id/text_view_comic_issue_number"
                tools:text="Sep, 13 2021" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>