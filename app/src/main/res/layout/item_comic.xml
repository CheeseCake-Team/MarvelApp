<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="comic"
            type="com.abaferastech.marvelapp.data.model.Comics" />

        <variable
            name="listener"
            type="com.abaferastech.marvelapp.ui.home.ComicsInteractionListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="@dimen/comic_card_view_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_4dp"
        android:onClick="@{() -> listener.onClickSeries(comic)}"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/space_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_story_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comic_image_view_height"
                android:contentDescription="@string/image_of_the_comic"
                android:scaleType="fitXY"
                app:imageUrl="@{comic.thumbnail}"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/material_dynamic_tertiary70" />

            <TextView
                android:id="@+id/text_view_comic_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/bangers"
                android:maxLines="1"
                android:text="@{comic.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_story_image"
                tools:text="The amazing spider-man" />

            <TextView
                android:id="@+id/text_view_comic_issue_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6dp"
                android:fontFamily="@font/bangers"
                android:text="@{@string/issue(comic.issueNumber.toString())}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_comic_name"
                tools:text="Issue #13" />

            <TextView
                android:id="@+id/text_view_comic_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:fontFamily="@font/bangers"
                android:text="@{comic.modified.substring(0,10)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_comic_issue_number"
                tools:text="Sep, 13 2021" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>