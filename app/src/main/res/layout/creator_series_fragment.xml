<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C3BEBE">

    <data>

        <variable
            name="viewModel"
            type="com.abaferastech.marvelapp.ui.creators.CreatorsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.base.CreatorSeriesFragment">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_creator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_follow"
            android:src="@drawable/creator_img"
            app:civ_border_width="4dp"
            app:civ_border_color="#FAFAFAFA"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_creator_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/image_creator"
            app:layout_constraintEnd_toEndOf="@id/image_creator"
            android:textColor="#D9000000"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/image_creator"
            app:layout_constraintBottom_toTopOf="@id/text_job"
            android:text="SALADIN AHMED"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginTop="8dp"

            />
        <TextView
            android:id="@+id/text_job"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="CREATOR"
            app:layout_constraintStart_toStartOf="@id/image_creator"
            app:layout_constraintEnd_toEndOf="@id/image_creator"
            app:layout_constraintTop_toBottomOf="@id/text_creator_name"        android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#AB000000"

            />
        <TextView
            android:id="@+id/text_stat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp"
            app:layout_constraintEnd_toStartOf="@id/text_follow"
            android:background="@drawable/baseline_star_outline_24"
            />

        <TextView
            android:id="@+id/text_follow"
            android:layout_width="150dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="FOLLOW CREATOR"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#D9000000"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_series"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingVertical="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_follow"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp"
            app:items="@{viewModel.stories}"
            tools:listitem="@layout/creator_series_card" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>