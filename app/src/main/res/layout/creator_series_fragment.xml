<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C3BEBE">

    <data>

        <variable
            name="viewModel"
            type="com.abaferastech.marvelapp.ui.creators.CreatorsViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/creator_series_fragment_xml_constraintlayout_scene"
        tools:context=".ui.base.CreatorSeriesFragment">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image_creator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.creator.thumbnail}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:roundPercent="1"
            tools:src="@drawable/creator_img" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_creator"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.creator.fullName}"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/text_job"
            app:layout_constraintEnd_toEndOf="@id/image_creator"
            app:layout_constraintStart_toStartOf="@id/image_creator"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Creator Name" />

        <TextView
            android:id="@+id/text_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="CREATOR"
            app:layout_constraintEnd_toEndOf="@id/text_creator_name"
            app:layout_constraintStart_toStartOf="@id/text_creator_name"
            app:layout_constraintTop_toBottomOf="@id/text_creator_name" />

        <TextView
            android:id="@+id/text_stat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="110dp"
            android:background="@drawable/baseline_star_outline_24"
            app:layout_constraintBottom_toBottomOf="@id/text_follow"
            app:layout_constraintEnd_toStartOf="@id/text_follow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_follow" />

        <TextView
            android:id="@+id/text_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="FOLLOW CREATOR"
            app:layout_constraintEnd_toEndOf="@id/text_job"
            app:layout_constraintStart_toStartOf="@id/text_job"
            app:layout_constraintTop_toBottomOf="@id/text_job" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_follow"
            android:id="@+id/scrollView"
            android:layout_marginTop="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            app:items="@{viewModel.series}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/creator_series_card" />

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>