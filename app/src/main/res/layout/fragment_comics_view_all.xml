<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.abaferastech.marvelapp.ui.comic.comics.ComicsViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_comics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:items = "@{viewModel.comics.toData()}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:padding="@dimen/space_12dp"
            tools:listitem="@layout/item_comic_grid"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showWhenLoading="@{viewModel.comics}"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_error"
            android:layout_width="@dimen/lottie_error_size"
            android:layout_height="@dimen/lottie_error_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/lottie_error"
            app:showWhenError="@{viewModel.comics}" />

        <TextView
            android:id="@+id/text_view_error_message"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/error_message"
            app:layout_constraintEnd_toEndOf="@+id/lottie_error"
            app:layout_constraintStart_toStartOf="@id/lottie_error"
            app:layout_constraintTop_toBottomOf="@+id/lottie_error"
            app:showWhenError="@{viewModel.comics}" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/refresh"
            android:layout_marginTop="@dimen/space_16dp"
            android:onClick="@{()->viewModel.getMarvelComics()}"
            app:layout_constraintEnd_toEndOf="@+id/text_view_error_message"
            app:layout_constraintStart_toStartOf="@+id/text_view_error_message"
            app:layout_constraintTop_toBottomOf="@+id/text_view_error_message"
            app:showWhenError="@{viewModel.comics}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
